<body>

  <center>
    <h1>Manage Users</h1>

    <button type="button" class="btn" id="addUser" data-toggle="modal" data-target="#addUserModal" data-dismiss="modal">Add User</button>

    <button type="button" class="btn" id="editUser" data-toggle="modal" data-target="#editUserModal">Edit/Disable User</button>
  </center>

  <!--modal 1 -->
  <div id="addUserModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title">Add User</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <form>
          <div class="modal-body">
            <div class="row">
              <label id="userFirstLabel" class="col-md-4" for="userFirst">First Name</label>
              <label class="col-md-4" for="userLast">Last Name</label>
            </div>
            <div class="row">
              <input class="col-md-4 inputField" placeholder="Enter Text Here" type="text" id="userFirst" name="userFirst">
              <input class="col-md-4 inputField" placeholder="Enter Text Here" type="text" id="userLast" name="userLast">
            </div>
            <div class="row">
              <label class="col-md-4" for="staffID">Staff ID</label>
              <label class="col-md-4" for="userEmail">Email</label>
            </div>
            <div class="row">
              <input class="col-md-4 inputField" placeholder="Enter Text Here" type="number" id="staffID" name="staffID">
              <input class="col-md-4 inputField" placeholder="Enter Text Here" type="email" id="userEmail" name="userEmail">
            </div>
            <div class="row">
              <label for="securityRole" class="col-md-4">Security Role</label>
              <label for="accountStatus" class="col-md-4">Account Status</label>
            </div>
            <div class="row">

              <select class="col-md-4 inputField" id="securityRole" name="securityRole">
                                <option value="" selected>Select One</option>
                                <option value="initiator">Initiator</option>
                                <option value="reviewer">Reviewer</option>
                                <option value="administrator">Administrator</option>
                            </select>
              <select class="col-md-4 inputField" id="accountStatus" name="accountStatus">
                                <option value="" selected>Select One</option>
                                <option value="active">Active</option>
                                <option value="inactive">Inactive</option>
                            </select>
            </div>
          </div>
          <div class="modal-footer">
            <button type="submit" class="btn" id="addNewUser" data-dismiss="modal">Add User</button>
            <button type="button" class="btn" data-dismiss="modal">Cancel</button>
          </div>
        </form>
      </div>
    </div>
  </div>
  <!--modal 2-->
  <div id="editUserModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title">Edit/Disable User</h4>
        </div>
        <div id="userDatabase">
          <table id="userTable" class="table table striped">
            <thread>
              <tr>
                <th>ID</th>
                <th>Last Name</th>
                <th>First Name</th>
                <th>Email</th>
                <th>Staff ID</th>
                <th>Security Role</th>
                <th>Login Name</th>
              </tr>
            </thread>
            <tbody id="userInfo">

            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</body>
